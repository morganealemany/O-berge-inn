    {% extends 'base.html.twig' %}

    {% block title %}Tableau de bord{% endblock %}

    {% block body %}
    <main class="container ">
  
        {# Title section #} 
        <button class="button-link d-flex align-self-end ms-4 bg-one rounded p-1">
            <a class="text-decoration-none link color-four" href="{{ path('home') }}">Retour</a>
        </button>
        <div class="title text-center mb-5">
            <h1 class="text-uppercase fw-bold">Tableau de bord</h1>
            <h3 class="fw-bold">Bienvenue {{app.user.pseudo}}</h3>
        
        </div>

        {# Events section #}
        <section id="dashboard-section">
            <div class="card text-center">
                <div class="card-header">
                    Tous mes événements
                </div>
                <div class="card-body">
                    <table>
                        <tr id="events-organized">
                            <td>Organisés</td>
                            <td>10</td>
                        </tr>
                        <tr id="events-invited">
                            <td>Invités</td>
                            <td>12</td>
                        </tr>
                        <tr id="events-archived">
                            <td>Archivés</td>
                            <td>10</td>
                        </tr>
                        <tr id="events-total">
                            <td>Total</td>
                            <td>22</td>
                        </tr>

                    </table>
                    <a href="#" class="btn access">Accéder à la liste</a>
                </div>
                <div class="card-footer text-muted">
                <p>
                    <a href=""><i class="bi bi-plus-circle-fill"></i> Créer un nouvel événement</a>
                </p>
                <p>
                    <a href=""><i class="bi bi-envelope-fill"></i> Envoyer des invitations</a>
                </p>
                </div>
            </div>
            <div class="card text-center">
                <div class="card-header">
                    Tous mes sondages
                </div>
                <div class="survey-card card-body">
                    <table class="survey-table">
                        <tr id="survey-active">
                            <td>Actifs</td>
                            <td>10</td>
                        </tr>
                        <tr id="survey-inactive">
                            <td>Inactifs</td>
                            <td>12</td>
                        </tr>
                        <tr id="survey-total">
                            <td>Total</td>
                            <td>22</td>
                        </tr>

                    </table>
                    <a href="#" class="btn access">Accéder à la liste</a>
                </div>
                <div class="card-footer text-muted">
                    <a href=""><i class="bi bi-plus-circle-fill"></i> Créer un nouveau sondage</a>
                </div>
            </div>
            <div class="card text-center">
                <div class="card-header">
                    Mon profil
                </div>
                <div class="profile-card card-body">
                    <img src="{{ asset('uploads/' ~ app.user.image)}}" class="rounded-circle" alt="">
                    <p>{{app.user.firstname}} {{app.user.lastname}}</p>
                    <p>{{app.user.email}}</p>
                    <a href="#" class="btn access">Accéder</a>
                </div>
            </div>

        {% if is_granted('ROLE_ADMIN') %}

            <div class="card text-center">
                <div class="card-header">
                    Administration
                </div>
                <div class="card-body">
                <p class="admin-text">Gestion des comptes utilisateurs et des événements.</p>
                    <a href="#" class="btn access">Accéder</a>
                </div>
            </div>

        {% endif %}

        </section>


  </main>  
    {% endblock %}


    
