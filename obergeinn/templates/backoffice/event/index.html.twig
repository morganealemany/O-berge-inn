{% extends 'backoffice/layout.html.twig' %}

{% block content %}
    <main class="admin-event-index">
        <h3>Gestion des évènements</h3>
        <table class="admin-event-table table table-striped">
            <thead>
                <tr>
                    <th class="event-title">Titre</th>
                    <th class="event-description">Description</th>
                    <th class="event-address">Adresse</th>
                    <th class="event-date">Date</th>
                    <th class="event-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
            <tr>
                <td data-label="Titre"> {{ event.title }} </td>
                <td data-label="Description"> {{ event.description }} </td>
                <td data-label="Adresse"> {{ event.adress }} </td>
                <td data-label="Date">{{event.date ? event.date|date('d-m-Y')}}</td>
                <td data-label="Actions">
                    <a href="{{ path('backoffice_event_edit', {id:event.id}) }}">Éditer</a>
                    {# <a href="{{ path('backoffice_user_delete', {id:user.id}) }}">Supprimer</a> #}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}